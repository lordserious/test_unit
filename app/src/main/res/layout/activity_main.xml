<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".view.ui.activity.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/splash_bcp" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/money_in_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:counterOverflowTextAppearance="@style/error_appearance_red"
                    app:counterTextAppearance="@style/error_appearance"
                    app:errorTextAppearance="@style/error_appearance_red">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/nameNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tu envias:"
                        android:imeOptions="actionNext"
                        android:inputType="textAutoComplete|textAutoCorrect|textCapSentences"
                        android:nextFocusDown="@+id/description"
                        android:text="300"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/blueBcp"
                    android:text="Dolares"
                    android:textColor="@color/colorWhite" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/money_out_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:counterOverflowTextAppearance="@style/error_appearance_red"
                    app:counterTextAppearance="@style/error_appearance"
                    app:errorTextAppearance="@style/error_appearance_red">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/money_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tu recibes"
                        android:text="650"

                        android:imeOptions="actionNext"
                        android:inputType="textAutoComplete|textAutoCorrect|textCapSentences"
                        android:nextFocusDown="@+id/description"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangeIconOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/blueBcp"
                    android:text="Soles"
                    android:textColor="@color/colorWhite" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/moneyChange"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_flecha"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Compra:valor1 | Venta: valor2"
            android:textAlignment="center"
            android:textColor="@color/black" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOperationChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Empieza tu operaciÃ³n"
            android:textAlignment="center" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>